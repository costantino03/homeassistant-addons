{
    "name": "Keycloak",
    "version": "0.1.0",
    "slug": "keycloak",
    "description": "Ospita un server Keycloak per la gestione delle identit√†.",
    "arch": [
        "amd64",
        "aarch64"
    ],
    "startup": "services",
    "boot": "auto",
    "options": {
        "default_admin_username": {
            "name": "Username Amministratore Predefinito",
            "type": "string",
            "required": true,
            "default": "admin"
        },
        "default_admin_password": {
            "name": "Password Amministratore Predefinita",
            "type": "string",
            "required": true,
            "default": "admin",
            "format": "password"
        },
        "http_port": {
            "name": "Porta HTTP",
            "type": "integer",
            "required": true,
            "default": 8080
        },
        "https_port": {
            "name": "Porta HTTPS",
            "type": "integer",
            "required": false,
            "default": 8443
        },
        "database_vendor": {
            "name": "Vendor Database",
            "type": "select",
            "options": [
                "h2",
                "postgres",
                "mysql"
            ],
            "default": "h2"
        },
        "database_host": {
            "name": "Host Database (se non H2)",
            "type": "string",
            "required": false
        },
        "database_port": {
            "name": "Porta Database (se non H2)",
            "type": "integer",
            "required": false
        },
        "database_user": {
            "name": "Utente Database (se non H2)",
            "type": "string",
            "required": false
        },
        "database_password": {
            "name": "Password Database (se non H2)",
            "type": "string",
            "required": false,
            "format": "password"
        },
        "database_name": {
            "name": "Nome Database (se non H2)",
            "type": "string",
            "required": false
        }
    },
    "ports": {
        "8080/tcp": 8080,
        "8443/tcp": 8443
    },
    "image": "ghcr.io/costantino03/homeassistant-addons/keycloak/{arch}",
    "logo": "images/logo.png",
    "icon": "images/icon.png",
    "schema": {
        "default_admin_username": "str",
        "default_admin_password": "str",
        "http_port": "int",
        "https_port": "int?",
        "database_vendor": "str",
        "database_host": "str?",
        "database_port": "int?",
        "database_user": "str?",
        "database_password": "str?",
        "database_name": "str?"
    },
    "url": "https://github.com/costantino03/homeassistant-addons",
    "panel_icon": "mdi:key"
}